                </div>
            </div>
            <div id="searchResultsList" class="divide-y divide-gray-200">
                <!-- Results will be loaded here via AJAX -->
            </div>
        </div> #}

        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow mb-8">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-medium text-gray-900">Actions Rapides</h2>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <button onclick="openJobOfferModal()" class="flex items-center justify-center px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                        <i class="fas fa-plus mr-2"></i> Créer une annonce
                    </button>
                    <button onclick="openCompanyModal()" class="flex items-center justify-center px-4 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">
                        <i class="fas fa-building mr-2"></i> Ajouter une entreprise
                    </button>
                    <button onclick="openCompaniesListModal()" class="flex items-center justify-center px-4 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition">
                        <i class="fas fa-list mr-2"></i> Gérer les entreprises
                    </button>
                </div>
            </div>
        </div>

        <!-- Recent Job Offers -->
        <div class="bg-white rounded-lg shadow mb-8">
            <div class="px-6 py-4 border-b border-gray-200">
                <div class="flex justify-between items-center">
                    <h2 class="text-lg font-medium text-gray-900">Annonces Récentes</h2>
                    <button onclick="openArchivedOffersModal()" class="text-sm text-indigo-600 hover:text-indigo-800 font-medium">
                        <i class="fas fa-archive mr-1"></i> Voir les archives ({{ stats.archived_offers }})
                    </button>
                </div>
            </div>
            <div class="divide-y divide-gray-200">
                {% for offer in recentOffers %}
                    <div class="p-6">
                        <div class="flex items-center justify-between">
                            <div class="flex-1">
                                <h3 class="text-sm font-medium text-gray-900">{{ offer.title }}</h3>
                                <p class="text-sm text-gray-500">{{ offer.company_name }} • {{ offer.location }}</p>
                                <p class="text-sm text-gray-500">{{ offer.contract_type }}</p>
                            </div>
                            <div class="flex items-center space-x-2">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    Actif
                                </span>
                                <a href="/admin/job-applications/{{ offer.id }}" class="text-blue-600 hover:text-blue-800 flex items-center">
                                    <i class="fas fa-users mr-1"></i> Candidatures
                                </a>
                                <form action="/admin/job-offer/archive" method="POST" class="inline">
                                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                    <input type="hidden" name="id" value="{{ offer.id }}">
                                    <button type="submit" class="text-yellow-600 hover:text-yellow-800 flex items-center">
                                        <i class="fas fa-archive mr-1"></i> Archiver
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="p-6 text-center text-gray-500">
                        Aucune annonce récente
                    </div>
                {% endfor %}
            </div>
        </div>

        <!-- Recent Students -->
        {# <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200">
