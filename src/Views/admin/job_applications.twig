<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Candidatures - {{ jobOffer.title }}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/admin/dashboard" class="text-blue-600 hover:text-blue-800 mr-4">
                        <i class="fas fa-arrow-left mr-2"></i>Retour
                    </a>
                    <h1 class="text-xl font-bold text-gray-900">Candidatures pour: {{ jobOffer.title }}</h1>
                </div>
                <div class="flex items-center space-x-4">
                    <span class="text-sm text-gray-600">{{ user.email }}</span>
                    <form action="/logout" method="POST" class="inline">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <button type="submit" class="text-sm text-red-600 hover:text-red-800">
                            <i class="fas fa-sign-out-alt mr-1"></i> Déconnexion
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Flash Messages -->
        {% set succ = success() %}
        {% if succ %}
            <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-check-circle text-green-400"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-green-800">{{ succ }}</p>
                    </div>
                </div>
            </div>
        {% endif %}

        {% set errs = errors() %}
        {% if errs %}
            <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-exclamation-circle text-red-400"></i>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">Erreurs</h3>
                        <div class="mt-2 text-sm text-red-700">
                            {% for error in errs %}
                                <p>{{ error }}</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        <!-- Job Offer Info -->
        <div class="bg-white rounded-lg shadow p-6 mb-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <h3 class="text-lg font-semibold text-gray-900">{{ jobOffer.title }}</h3>
                    <p class="text-sm text-gray-600">{{ jobOffer.company_name }}</p>
                </div>
                <div>
                    <p class="text-sm text-gray-500">
                        <i class="fas fa-map-marker-alt mr-1"></i>{{ jobOffer.location }}
                    </p>
                    <p class="text-sm text-gray-500">
                        <i class="fas fa-briefcase mr-1"></i>{{ jobOffer.contract_type }}
                    </p>
                </div>
                <div class="text-right">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                        {{ applications|length }} candidature{{ applications|length > 1 ? 's' : '' }}
                    </span>
                </div>
            </div>
        </div>

        <!-- Applications List -->
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-medium text-gray-900">Liste des candidats</h2>
            </div>
            
            {% if applications|length > 0 %}
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Étudiant</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Promotion</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for application in applications %}
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">
                                            Étudiant #{{ application.student_id }}
                                        </div>
                                        {% if application.specialization %}
                                            <div class="text-sm text-gray-500">{{ application.specialization }}</div>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">{{ application.student_email }}</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">{{ application.promotion ?? 'Non spécifiée' }}</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% set statusColor = application.status == 'ACCEPTED' ? 'green' : 
                                                         application.status == 'REJECTED' ? 'red' : 'yellow' %}
                                        {% set statusText = application.status == 'ACCEPTED' ? 'Acceptée' : 
                                                         application.status == 'REJECTED' ? 'Refusée' : 'En attente' %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-{{ statusColor }}-100 text-{{ statusColor }}-800" id="status-{{ application.id }}">
                                            {{ statusText }}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        {{ application.applied_at|date('d/m/Y H:i') }}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <button onclick="showStudentDetails({{ application.student_id }})" 
                                                class="text-blue-600 hover:text-blue-900 mr-3">
                                            <i class="fas fa-eye mr-1"></i>Voir détails
                                        </button>
                                        
                                        {% if application.status == 'PENDING' %}
                                            <div class="inline-flex space-x-2">
                                                <button onclick="updateApplicationStatus({{ application.id }}, 'ACCEPTED')" 
                                                        class="text-green-600 hover:text-green-900">
                                                    <i class="fas fa-check mr-1"></i>Accepter
                                                </button>
                                                <button onclick="updateApplicationStatus({{ application.id }}, 'REJECTED')" 
                                                        class="text-red-600 hover:text-red-900">
                                                    <i class="fas fa-times mr-1"></i>Refuser
                                                </button>
                                            </div>
                                        {% else %}
                                            <button onclick="updateApplicationStatus({{ application.id }}, 'PENDING')" 
                                                    class="text-yellow-600 hover:text-yellow-900">
                                                <i class="fas fa-undo mr-1"></i>Réinitialiser
                                            </button>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-12">
                    <i class="fas fa-users text-gray-400 text-5xl mb-4"></i>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Aucune candidature</h3>
                    <p class="text-gray-500">Personne n'a encore postulé à cette offre.</p>
                </div>
            {% endif %}
        </div>
    </main>

    <!-- Modal Student Details -->
    <div id="studentModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full z-50">
        <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-3/4 lg:w-1/2 shadow-lg rounded-md bg-white">
            <div class="mt-3">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-medium text-gray-900">Détails de l'étudiant</h3>
                    <button onclick="closeStudentModal()" class="text-gray-400 hover:text-gray-600">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div id="studentDetailsContent" class="space-y-4">
                    <!-- Content will be loaded here -->
                </div>
            </div>
        </div>
    </div>

    <script>
        function showStudentDetails(studentId) {
            fetch(`/admin/student-details?student_id=${studentId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.error) {
                        alert('Erreur: ' + data.error);
                        return;
                    }
                    
                    const student = data.student;
                    const content = document.getElementById('studentDetailsContent');
                    
                    if (!student || !student.id) {
                        content.innerHTML = '<p class="text-gray-500">Étudiant introuvable</p>';
                    } else {
                        let applicationsHtml = '';
                        if (student.applications && student.applications.length > 0) {
                            applicationsHtml = `
                                <div class="border-t pt-4">
                                    <h4 class="font-medium text-gray-900 mb-2">Candidatures</h4>
                                    <div class="space-y-2">
                                        ${student.applications.map(app => {
                                            const statusColor = app.status === 'ACCEPTED' ? 'green' : 
                                                              app.status === 'REJECTED' ? 'red' : 'yellow';
                                            const statusText = app.status === 'ACCEPTED' ? 'Acceptée' : 
                                                             app.status === 'REJECTED' ? 'Refusée' : 'En attente';
                                            return `
                                                <div class="border rounded p-3">
                                                    <div class="flex justify-between items-center">
                                                        <div>
                                                            <p class="font-medium">${app.job_title}</p>
                                                            <p class="text-sm text-gray-600">${app.company_name}</p>
                                                        </div>
                                                        <span class="px-2 py-1 text-xs rounded-full bg-${statusColor}-100 text-${statusColor}-800">
                                                            ${statusText}
                                                        </span>
                                                    </div>
                                                    <p class="text-xs text-gray-500 mt-1">
                                                        Postulé le ${new Date(app.applied_at).toLocaleDateString('fr-FR')}
                                                    </p>
                                                </div>
                                            `;
                                        }).join('')}
                                    </div>
                                </div>
                            `;
                        }
                        
                        content.innerHTML = `
                            <div class="space-y-3">
                                <div>
                                    <h4 class="font-medium text-gray-900">Informations personnelles</h4>
                                    <p><strong>ID:</strong> ${student.id}</p>
                                    <p><strong>Email:</strong> ${student.email}</p>
                                    <p><strong>Inscrit le:</strong> ${new Date(student.created_at).toLocaleDateString('fr-FR')}</p>
                                </div>
                                
                                ${student.promotion ? `
                                    <div>
                                        <h4 class="font-medium text-gray-900">Formation</h4>
                                        <p><strong>Promotion:</strong> ${student.promotion}</p>
                                        ${student.specialization ? `<p><strong>Spécialisation:</strong> ${student.specialization}</p>` : ''}
                                    </div>
                                ` : ''}
                                
                                ${applicationsHtml}
                            </div>
                        `;
                    }
                    
                    document.getElementById('studentModal').classList.remove('hidden');
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Erreur lors du chargement des détails');
                });
        }

        function closeStudentModal() {
            document.getElementById('studentModal').classList.add('hidden');
        }

        // Close modal when clicking outside
        document.getElementById('studentModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeStudentModal();
            }
        });

        // Function to update application status
        function updateApplicationStatus(applicationId, newStatus) {
            if (!confirm('Êtes-vous sûr de vouloir changer le statut de cette candidature ?')) {
                return;
            }

            const formData = new FormData();
            formData.append('application_id', applicationId);
            formData.append('status', newStatus);

            fetch('/admin/update-application-status', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Show success message
                    showNotification('Statut mis à jour avec succès', 'success');
                    
                    // Update the status display
                    updateStatusDisplay(applicationId, newStatus);
                    
                    // Reload the page after a short delay to show updated buttons
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                } else {
                    showNotification('Erreur: ' + (data.error || 'Erreur inconnue'), 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('Erreur lors de la mise à jour du statut', 'error');
            });
        }

        function updateStatusDisplay(applicationId, newStatus) {
            const statusElement = document.getElementById('status-' + applicationId);
            if (!statusElement) return;

            let statusColor, statusText;
            switch(newStatus) {
                case 'ACCEPTED':
                    statusColor = 'green';
                    statusText = 'Acceptée';
                    break;
                case 'REJECTED':
                    statusColor = 'red';
                    statusText = 'Refusée';
                    break;
                case 'PENDING':
                default:
                    statusColor = 'yellow';
                    statusText = 'En attente';
                    break;
            }

            statusElement.className = `inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-${statusColor}-100 text-${statusColor}-800`;
            statusElement.textContent = statusText;
        }

        function showNotification(message, type) {
            // Create notification element
            const notification = document.createElement('div');
            notification.className = `fixed top-4 right-4 p-4 rounded-lg shadow-lg z-50 ${
                type === 'success' ? 'bg-green-50 border border-green-200 text-green-800' : 
                'bg-red-50 border border-red-200 text-red-800'
            }`;
            notification.innerHTML = `
                <div class="flex">
                    <div class="flex-shrink-0">
                        <i class="fas ${type === 'success' ? 'fa-check-circle text-green-400' : 'fa-exclamation-circle text-red-400'}"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium">${message}</p>
                    </div>
                </div>
            `;

            document.body.appendChild(notification);

            // Remove notification after 3 seconds
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.parentNode.removeChild(notification);
                }
            }, 3000);
        }
    </script>
</body>
</html>
